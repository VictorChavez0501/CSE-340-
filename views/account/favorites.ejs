<h1>My Favorite Vehicles</h1>

<% if (favorites.length === 0) { %>
  <p>You have no favorite vehicles yet.</p>
<% } %>

<ul class="favorites-list">
  <% favorites.forEach(vehicle => { %>
    <li>
      <strong><%= vehicle.inv_make %> <%= vehicle.inv_model %></strong>
      - $<%= vehicle.inv_price %>
      <a href="/favorites/remove/<%= vehicle.inv_id %>">Remove</a>
    </li>
  <% }) %>
</ul>
